<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting"
            android:src="@drawable/ic_baseline_settings_24"/></RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:id="@+id/thesongTitle" />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_due"/>
    </RelativeLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="20dp"
        android:id="@+id/thesongSeekbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/thesongPrev"
            android:src="@drawable/ic_baseline_skip_previous_24"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:id="@+id/thesongPlay"
            android:src="@drawable/ic_baseline_play" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/thesongNext"
            android:src="@drawable/ic_baseline_skip_next_24"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/thesongDetailLayout"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="NAME"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15dp"
                android:id="@+id/thesongDetail_name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="ARTIST"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15dp"
                android:id="@+id/thesongDetail_artist" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="ALBUM"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15dp"
                android:id="@+id/thesongDetail_album" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="DURATION"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15dp"
                android:id="@+id/thesongDetail_duration" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/thesongPlaylistLayout"
        >
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_height="50dp"
            android:id="@+id/thesongShowDetail"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/thesongListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="25"
            tools:listitem="@layout/recycler_view_item" />

    </LinearLayout>


</LinearLayout>