<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepTimeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="35sp"
        android:text="@string/SleepTimeTitle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/oneTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/oneTimeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:max="120"
            android:min="5"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/oneTimeLayout"
            app:layout_constraintStart_toStartOf="@id/oneTimeLayout"
            android:scaleY="2" />
        <Switch
            android:id="@+id/oneTimeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/oneTimeSeekBar"
            app:layout_constraintStart_toStartOf="@id/oneTimeLayout"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/oneTimeTextView"
            android:layout_width="wrap_content"
            android:textSize="19sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/oneTimeSeekBar"
            app:layout_constraintStart_toEndOf="@id/oneTimeSwitch"
            android:text="Set onetime sleep timer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <SeekBar
        android:id="@+id/repeatTimeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:max="120"
        android:min="5"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/oneTimeLayout"
        app:layout_constraintStart_toStartOf="@id/oneTimeLayout"
        android:scaleY="2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repeatSwitch"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_marginEnd="20dp"
            android:textSize="19sp"
            android:text="Sleep when Rest ->" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginEnd="16dp"
            tools:text="22:30"
            android:id="@+id/sleepTimeText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="06:00"
            android:textSize="19sp"
            android:id="@+id/wakeupTimeText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_marginRight="50dp"
            android:text="OK" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>